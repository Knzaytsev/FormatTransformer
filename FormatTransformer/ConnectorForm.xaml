<Window x:Class="FormatTransformer.ConnectorForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormatTransformer"
        mc:Ignorable="d"
        Title="ConnectorForm" Height="212" Width="405">
    <Grid>
        <ListBox x:Name="connectorList" HorizontalAlignment="Left" Height="121" Margin="17,46,0,0" VerticalAlignment="Top" Width="158" SelectionChanged="connectorList_SelectionChanged">
            <ListBoxItem x:Name="local">
                <TextBlock Text="Локальный корпус"/>
            </ListBoxItem>
            <ListBoxItem x:Name="db">
                <TextBlock Text="База данных"/>
            </ListBoxItem>
        </ListBox>
        <TextBox x:Name="connectionTextBox" HorizontalAlignment="Left" Margin="180,46,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="204"/>
        <Label Content="Строка подключения:" HorizontalAlignment="Left" Margin="180,20,0,0" VerticalAlignment="Top"/>
        <Label Content="Способ подключения:" HorizontalAlignment="Left" Margin="17,20,0,0" VerticalAlignment="Top"/>
        <Button x:Name="connectButton" Content="Подключиться" HorizontalAlignment="Left" Margin="240,106,0,0" VerticalAlignment="Top" Click="connectButton_Click"/>

    </Grid>
</Window>
