<Window x:Class="FormatTransformer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormatTransformer"
        mc:Ignorable="d"
        Title="MainWindow" Height="474" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="153*"/>
            <ColumnDefinition Width="647*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="transformButton" Content="Преобразовать" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Width="106" Click="transformButton_Click"/>
        <Button x:Name="loadCorpora" Content="Загрузить корпус" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Click="loadCorpora_Click" Width="106"/>
        <Button x:Name="loadRules" Content="Загрузить правила" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" Click="loadRules_Click"/>
        <Button x:Name="addCorpus" Content="Добавить корпус" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Click="addCorpus_Click" Width="106"/>
        <DockPanel x:Name="corpusTree" HorizontalAlignment="Left" Height="414" LastChildFill="False" Margin="121,37,0,0" VerticalAlignment="Top" Width="329" Grid.ColumnSpan="2">
            <ListBox x:Name="listCorpora" Width="328" SelectionChanged="listCorpora_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=Title}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
        <DockPanel LastChildFill="False" Margin="302,37,10,10" Grid.Column="1">
            <ListBox x:Name="listFiles" SelectionChanged="listFiles_SelectionChanged" RenderTransformOrigin="0.5,0.5" DockPanel.Dock="Left" Width="333">
                <ListBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ListBox.RenderTransform>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
        <Button x:Name="addFile" Content="Добавить файл" HorizontalAlignment="Left" Margin="10,112,0,0" VerticalAlignment="Top" Width="106" Click="addFile_Click"/>
    </Grid>
</Window>
