<Window x:Class="FormatTransformer.MasterWizard1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormatTransformer"
        mc:Ignorable="d"
        Title="MasterWizard1" Height="276" Width="477">
    <Grid>
        <Button x:Name="nextStepButton" Content="Далее" HorizontalAlignment="Left" Margin="430,230,0,0" VerticalAlignment="Top" Click="nextStepButton_Click"/>
        <Button x:Name="cancelButton" Content="Отмена" HorizontalAlignment="Left" Margin="334,230,0,0" VerticalAlignment="Top" Click="cancelButton_Click"/>
        <ListBox x:Name="listCorpora" Margin="10,44,10,44">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Выберите исходный корпус:" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top"/>
        <Button x:Name="returnButton" Content="Назад" HorizontalAlignment="Left" Margin="385,230,0,0" VerticalAlignment="Top" Width="40" Click="returnButton_Click"/>
    </Grid>
</Window>
