        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormatTransformer"
        mc:Ignorable="d"
        Title="ChangeInfoForm" Height="107" Width="155">
    <Grid>
        <TextBox x:Name="infoField" HorizontalAlignment="Left" Margin="10,36,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
